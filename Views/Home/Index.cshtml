@{
    ViewData["Title"] = "Página Inicial";
}

<div class="container">
    <!-- Cabeçalho com botão de Login -->
    <div class="d-flex justify-content-end py-3">
        <div>
            <a asp-controller="Account" asp-action="Login" asp-route-ReturnUrl="/usuarios"
               class="btn btn-primary me-2">
                <i class="fas fa-sign-in-alt"></i> Login
            </a>
            <a asp-controller="Account" asp-action="Register"
               class="btn btn-outline-secondary">
                <i class="fas fa-user-plus"></i> Registrar
            </a>
        </div>
    </div>

    <!-- Conteúdo Principal -->
    <div class="text-center py-5">
        <h1 class="display-4 mb-4">
            <i class="fas fa-book-open text-primary"></i> Bem-vindo ao Sistema de Biblioteca
        </h1>
        <p class="lead text-muted mb-5">Gerencie seu acervo bibliográfico de forma eficiente</p>

        <div class="row g-4">
            <!-- Card Catálogo -->
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body">
                        <i class="fas fa-book fa-3x text-primary mb-3"></i>
                        <h3>Catálogo</h3>
                        <p class="text-muted">Gerencie todos os livros disponíveis</p>
                        <a asp-controller="Livros" asp-action="Index" class="btn btn-outline-primary">
                            Acessar <i class="fas fa-arrow-right ms-1"></i>
                        </a>
                    </div>
                </div>
            </div>

            <!-- Card Usuários -->
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body">
                        <i class="fas fa-users fa-3x text-success mb-3"></i>
                        <h3>Usuários</h3>
                        <p class="text-muted">Administre os usuários do sistema</p>
                        <a asp-controller="Usuarios" asp-action="Index" class="btn btn-outline-success">
                            Gerenciar <i class="fas fa-arrow-right ms-1"></i>
                        </a>
                    </div>
                </div>
            </div>

            <!-- Card Locações -->
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body">
                        <i class="fas fa-exchange-alt fa-3x text-warning mb-3"></i>
                        <h3>Locações</h3>
                        <p class="text-muted">Controle de empréstimos e devoluções</p>
                        <a asp-controller="Locacoes" asp-action="Index" class="btn btn-outline-warning">
                            Verificar <i class="fas fa-arrow-right ms-1"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Seção de Scripts -->
@section Scripts {
    @if (TempData["MensagemSucesso"] != null)
    {
        <script>
            Swal.fire({
                icon: 'success',
                title: 'Sucesso!',
                text: '@TempData["MensagemSucesso"]'
            });
        </script>
    }
    @if (TempData["MensagemErro"] != null)
    {
        <script>
            Swal.fire({
                icon: 'error',
                title: 'Erro!',
                text: '@TempData["MensagemErro"]'
            });
        </script>
    }
}